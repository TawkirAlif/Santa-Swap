mixin i(name)
	svg.icon(class='icon-' + name)
		use(xlink:href='img/sprite.svg#icon-' + name)

mixin sidebar(class1, class2, class3, class4, class5, class6, class7, classSidebar)
	.sidebar(class=classSidebar)
		.sidebar__head
			a.sidebar__logo(href="index.html")
				img.sidebar__pic.sidebar__pic_light(src="img/logo.svg" alt="")
				img.sidebar__pic.sidebar__pic_dark(src="img/logo-white.svg" alt="")
			button.sidebar__toggle
				svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"  stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24")
					path(d="M22 12H3" stroke="#11142d")
					g(stroke="#808191")
						path(d="M22 4H13")
						path(opacity=".301" d="M22 20H13")
					path(d="M7 7l-5 5 5 5" stroke="#11142d")
			button.sidebar__close
				+i('close')
		.sidebar__body
			nav.sidebar__nav
				a.sidebar__item(href="index.html" class=class1)
					.sidebar__icon
						+i('home')
					.sidebar__text Home
				a.sidebar__item(href="exchange.html" class=class2)
					.sidebar__icon
						+i('chart')
					.sidebar__text Exchange
				a.sidebar__item(href="prices.html" class=class3)
					.sidebar__icon
						+i('document')
					.sidebar__text Prices
				a.sidebar__item(href="wallets.html" class=class4)
					.sidebar__icon
						+i('wallet')
					.sidebar__text Wallets
				a.sidebar__item(href="promotions.html" class=class5)
					.sidebar__icon
						+i('discount')
					.sidebar__text Promotions
				a.sidebar__item(href="activities.html" class=class6)
					.sidebar__icon
						+i('activity')
					.sidebar__text Activities
				a.sidebar__item(href="notifications.html" class=class7)
					.sidebar__icon
						+i('notification')
					.sidebar__text Notifications
				a.sidebar__item.js-popup-open(href="#popup-settings" data-effect="mfp-zoom-in")
					.sidebar__icon
						+i('settings')
					.sidebar__text Settings
			.sidebar__mail
				button.sidebar__close
					+i('close')
				.sidebar__info Send Cryto to An Email Address
				button.sidebar__btn.btn.btn_white.btn_sm Send Now
			form.sidebar__search
				input.sidebar__input(type="text" placeholder="Search")
				button.sidebar__start
					+i('search')
		.sidebar__bottom
			label.switch.switch_theme.js-switch-theme
				input.switch__input(type="checkbox")
				span.switch__in
					span.switch__box
					span.switch__icon
						+i('theme-light')
						+i('theme-dark')
			a.sidebar__user(href="sign-in.html")
				img(src="img/ava-header.png" alt="")

