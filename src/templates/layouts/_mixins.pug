mixin dropdown(link1, link2, link3, link4)
	.dropdown
		button.dropdown__head
			+i('dots')
		.dropdown__body
			a.dropdown__link.selected(href="#")=link1
			a.dropdown__link(href="#")=link2
			a.dropdown__link(href="#")=link3
			a.dropdown__link(href="#")=link4

